<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lmo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryVariant">@color/button</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button</item>
        <item name="colorSecondaryVariant">@color/button</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- Общие стили -->
    <style name="Theme.Lmo.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/corner_button</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingLeft">75dp</item>
        <item name="android:paddingRight">75dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Lmo.PrescriptionBoldText">
        <item name="android:textColor">@color/text1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Lmo.PrescriptionLightText">
        <item name="android:textColor">@color/text2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.Lmo.WhiteMediumText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="HorizontalDivider2" parent="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/gradient1</item>
    </style>

    <style name="InfoFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!--  -->
    <style name="Theme.Lmo.TabLayoutText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.Lmo.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@color/gradient1</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:dividerPadding">3dp</item>
        <item name="android:divider">@android:color/black</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/text1</item>
        <item name="tabTextColor">@color/text2</item>
    </style>
    <style name="Theme.Lmo.ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/gradient</item>
    </style>
</resources>